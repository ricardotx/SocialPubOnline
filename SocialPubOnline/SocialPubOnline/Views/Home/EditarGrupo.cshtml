@model SocialPubOnline.Models.Grupo

@{
    ViewBag.Title = "EditarGrupo";
}

<h2>Editar Grupo @Html.ActionLink(@Model.nome,"Grupo", new { id = Model.codigo_grupo }, new { @style = "color: #337ab7" })</h2> <hr />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="row">

        <div class="col-md-2 col-md-offset-1">          
            @Html.ActionLink("Eliminar Grupo","EliminarGrupo",new { id=Model.codigo_grupo})<p></p>
            <div class="panel panel-default">

                <div class="panel-body">
                    <img width="130" height="130" src="@Model.imagem" />
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <br />
            <div class="form-horizontal">

                <div class="form-group">
                    @Html.LabelFor(model => model.nome, "Nome:", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10" style="width: 300px">
                        @Html.EditorFor(model => model.nome, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.nome, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.descricao, "Descrição:", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10" style="width: 300px">
                        @Html.TextAreaFor(model => model.descricao, new { @style = "overflow:auto; resize:none", @class = "form-control input-group-sm" })
                        @Html.ValidationMessageFor(model => model.descricao, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10" style="width: 300px">
                        <input id="Button_Alteracoes" type="submit" value="Efetuar Alterações" class="btn btn-primary btn-block" />
                    </div>
                </div>

            </div>
        </div>
    </div>
} 