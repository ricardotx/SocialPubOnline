@model SocialPubOnline.Models.Utilizador

@{
    ViewBag.Title = "AlterarPassword";
}

<h2>Alterar Password</h2><hr />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
   <div class="row">

       <div class="col-md-8 col-lg-offset-4">

           @Html.ValidationSummary(true, "", new { @class = "text-danger" })
           @Html.HiddenFor(model => model.codigo_utilizador)

           <label for="inputPassword">Password Atual:</label>
           <div class="form-group" style="width: 300px">
               <input type="password" name="Password" id="Password" class="form-control" placeholder="Password Atual" required autofocus>
           </div>

           <label for="inputPassword">Nova Password:</label>
           <div class="form-group" style="width: 300px">
               <input type="password" name="NewPassword" id="NewPassword" class="form-control" placeholder="Nova Password" required autofocus>
           </div>

           <label for="inputPassword">Reintroduza a nova Password:</label>
           <div class="form-group" style="width: 300px">
               <input type="password" name="RepeatPassword" id="RepeatPassword" class="form-control" placeholder="Reintroduza a nova Password" required autofocus>
           </div>

           <div class="form-group" style="width: 300px">
               <input id="Button_alterarPassword" type="submit" value="Alterar Password" class="btn btn-primary btn-block" />
               <p class="text-danger"> @ViewBag.erro </p>
           </div>
       </div>

   </div>
}
