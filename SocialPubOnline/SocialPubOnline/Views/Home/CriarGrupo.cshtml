@model SocialPubOnline.Models.Grupo

@{
    ViewBag.Title = "CriarGrupo";
}

<h2>Criar Novo Grupo</h2><hr />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="row">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="col-md-2">

            @*@Html.ActionLink("Adicionar Foto", "AlterarFotoGrupo")*@

            <div class="panel panel-default">

                <div class="panel-body">
                    <img width="130" height="130" src="/Content/GrupoFotos/Default.png" />
                </div>

            </div>
        </div>

        <div class="col-md-8 col-md-offset-2">

            <label for="NomeGrupo">Nome do Grupo:</label>
            <div class="form-group" style="width: 300px">
                <input type="text" name="NomeGrupo" id="NomeGrupo" class="form-control" placeholder="" required autofocus>
            </div>

            <label for="DescricaoGrupo">Descrição do Grupo:</label>
            <div class="form-group" style="width: 300px">
                <textarea id="DescricaoGrupo" name="DescricaoGrupo" class="form-control input-group-sm" style="overflow:auto;resize:none;"></textarea>
            </div>

            <div class="form-group" style="width: 300px">
                <input type="submit" value="Criar grupo" class="btn btn-primary btn-block" />
                <p class="text-danger"> @ViewBag.erro </p>
            </div>
        </div>
    </div>
}
