
@{
    ViewBag.Title = "AlterarFoto";
}

<div class="row">
    <form class="form-signin" method="post" id="AlterarFoto" action="/Home/AlterarFoto/@ViewBag.IDutilizador" enctype="multipart/form-data">

        <h2 class="form-signin-heading">Alterar Foto de Perfil</h2>

        <div class="well" style="text-align:center">
            <img width="130" height="130" src="@ViewBag.fotoUtilizador" />
        </div>

        <label for="Foto">Tamanho da foto, 130*130px até 200*200px</label><p></p>

        <input name="Foto" id="Foto" type="file" required /><p></p>

        <button class="btn btn-primary btn-block" type="submit" >Alterar Foto</button>
        <p class="text-danger">@ViewBag.erro</p>

    </form>
</div>

