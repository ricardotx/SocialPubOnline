@model SocialPubOnline.Models.C_GrupoAmigos

@{
    ViewBag.Title = "GrupoAmigos";
}
<br />

<div class="row">

    @*Foto de perfil*@
    <div class="col-md-2 col-md-offset-1">

        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"> Foto de Perfil</h3>
            </div>

            <div class="panel-body">
                <img width="130" height="130" src="@Model.DadosUtilizador.foto" />
            </div>

        </div>
    </div>

    @*Dados do utilizador*@
    <div class="col-md-8">

        <div class="panel panel-default">

            <div class="panel-heading">
                <h1 class="panel-title">Dados Pessoais</h1>
            </div>

            <div class="panel-body">
                <span style="font-weight: bold">Nome:</span>
                @Model.DadosUtilizador.nome <br />

                <span style="font-weight: bold">E-Mail:</span>
                @Model.DadosUtilizador.email <br />

                <span style="font-weight: bold">Data Nascimento:</span>
                @Model.DadosUtilizador.data_nasc.ToShortDateString() <br />

                <span style="font-weight: bold">Morada:</span>
                @Model.DadosUtilizador.endereco_localidade, @Model.DadosUtilizador.endereco_pais <br />

                <span style="font-weight: bold">Contacto:</span>
                @Model.DadosUtilizador.contacto
            </div>
        </div>
    </div>

    <div class="row">

        <div class="col-md-10 col-md-offset-1">

            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Amigos (@Model.ListaAmigos.Count())</h3>
                </div>

                <div class="panel-body" style="text-align:center">
                    
                    @foreach (var amigo in Model.ListaAmigos)
                    {
                        <div class="col-md-2" style="width:200px; height:200px;">
                           
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <h3 class="panel-title"> @Html.ActionLink(@amigo.nome, "Perfil", new { id = amigo.codigo_utilizador }, new { @style = "color: #337ab7" })</h3>
                                </div>

                                <div class="panel-body">
                                    <img width="80" height="80" src="@amigo.foto" />
                                </div>                               
                            </div>
                            @Html.ActionLink("Remover Amizade", "RemoverAmizade", new { id = amigo.codigo_utilizador }, new { @class = "btn btn-primary btn-block", @role = "button" })                           
                        </div>
                    }                         
                 </div>
             </div>
         </div>
     </div>
 </div>
